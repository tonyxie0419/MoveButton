<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jikexueyuan.movebutton.MainActivity">

    <Button
        android:id="@+id/btnAnimationXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_by_animation_xml"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnAnimationJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_by_animation_java"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnAnimatorXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_by_animator_xml"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnAnimatorJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_by_animator_java"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/ivCustomAnimation"
        android:src="@drawable/demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
